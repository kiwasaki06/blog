<h2>
  <%= link_to 'new', new_post_path, class:'header-menu' %>
  posts
  <th><%= paginate @posts %></th>
</h2>

<ul>
  <% @posts.each do |post| %>
  <li>
    <th>Title:</th>
    <%= link_to post.title, post_path(post) %>
    <%= post.created_at.strftime("%Y-%m-%d %H:%M") %>
    <%= link_to '[edit]', edit_post_path(post) %>
    <%= link_to '[delete]',
        post_path(post),
        method: :delete,
        data:{ confirm: 'sure?' } %>
  </li>
  <% end %>
</ul>
