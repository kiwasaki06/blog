<h2>
  <%= link_to 'new', new_post_path, class:'header-menu' %>
  posts
</h2>
<ul>
  <% @posts.each do |post| %>
  <li>
    <%= link_to post.title, post_path(post) %>
    <%= link_to '[edit]', edit_post_path(post) %>
    <%= link_to '[delete]',
        post_path(post),
        method: :delete, 
        data:{ confirm: 'sure?' } %>
  </li>

  <% end %>
</ul>
