<h2><%= @post.title %></h2>
<p><%= simple_format @post.body %></p>

<h3>comment</h3>
<% if @post.comments.any? %>
<ul>
  <% @post.comments.each do |comment| %>
  <li>
    <%= comment.body %>
    <%= link_to '[delete]',
        post_comment_path(@post, comment),
        method: :delete,
        data:{ confirm: 'sure?' } %>
  </li>
  <% end %>
</ul>
<% end %>

<%= form_for ([@post, @post.comments.build]) do |f| %>
<p>
  <%= f.text_field :body %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
